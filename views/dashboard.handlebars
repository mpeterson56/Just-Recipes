<section>
  <h2>Add New Recipe</h2>

  <form class="new-recipe-form">
    <div>
      <label for="recipe-title">Title</label>
      <input type="text" id="recipe-title" name="recipe-title" />
    </div>
    <div id="ingredients">
      <label for="recipe-url">Ingredients</label>
      <input id="post-text" name="post-text" />
      <button id="add-ingredient">Add Another Ingredient</button>
    </div>
    <div id="steps">
      <label for="steps">Steps</label>
      <input type="text" id="post-text" name="post-text" />
      <button id="add-step">Add Another Step</button>
    </div>
    <button type="submit" class="btn">Add Recipe</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}